---
const cardimg = 'https://via.placeholder.com/300x250'
import Shopitem from '../components/Shopitem.astro';
import Tabs from '../components/Tabs.svelte';

const shopitems = [
  { id: 1,name: 'Pikachu',buycount: 1,description:"ละเอียดยิบ" },
  { id: 2,name: 'Charizard',buycount: 12,description:"ละเอียดยิบ2" },
  { id: 3,name: 'Bulbasaur',buycount: 22,description:"ละเอียดยิบ3" },
];


---
<div class="grid xl:grid-cols-4 gap-3 m-5">

<div class="carditems md:col-span-3">
    <div class="grid gap-4 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3">

{shopitems.map((data) => 
         <Shopitem
         id={data.id},
          title={data.name},
          href={cardimg},
          buycount={data.buycount.toString()},
          description={data.description}
          />
)}
        </div>
</div>
<div class="side-carditems bg-base-200 rounded-lg">
    <div class="overflow-x-auto">
      <Tabs client:load/>
      </div>
</div>

</div>





