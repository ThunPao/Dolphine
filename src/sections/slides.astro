      <!-- Slides -->
      <div class="keen-slider__slide">
        <img src={imgmockup} class="w-full" alt="แนะนำ" />
      </div>
      <div class="keen-slider__slide">
        <img src={imgmockup} class="w-full" alt="แนะนำ" />
      </div>
      <div class="keen-slider__slide">
        <img src={imgmockup} class="w-full" alt="แนะนำ" />
      </div>
    </div>
  </div>
  <div class="grid lg:grid-cols-1 grid-cols-2 gap-1 justify-center">
    <img src={sideimg} class="w-full" alt="แนะนำ" />
    <img src={sideimg} class="w-full" alt="แนะนำ" />
  </div>
</div>

<script>
  import "keen-slider/keen-slider.min.css";
  import KeenSlider from "keen-slider";

  var slider = new KeenSlider("#top-slides", {
    slides: {
      perView: 1,
    },
  });
</script>
