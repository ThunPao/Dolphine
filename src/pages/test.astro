---
export const prerender = false;
const personPromise = fetch("http://127.0.0.1:3005/shopitems")
  .then((response) => response.json())
  .then((arr) => arr[0].name);
const factPromise = fetch("http://127.0.0.1:3005/shopitems")
  .then((response) => response.json())
  .then((factData) => factData[0].description);

let counter = 0;

if (Astro.cookies.has("counter")) {
  const cookie = Astro.cookies.get("counter");
  counter = cookie.number() + 1;
}

Astro.cookies.set("counter", counter);
---

<html>
  <head>
    <title>A name and a description</title>
  </head>
  <body>
    <div class="bg-white">Shopitems</div>
    <h2>A name</h2>
    <p>{personPromise}</p>
    <h2>A fact</h2>
    <p>{factPromise}</p>
  </body>
</html>

{
  counter > 5 ? (
    <div class="alert sticky bottom-28 md:bottom-0">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        class="stroke-info shrink-0 w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
        />
      </svg>
      <span>we use cookies for no reason.</span>
      <div>
        <button class="btn btn-sm btn-primary">Accept</button>
      </div>
    </div>
  ) : (
    <span />
  )
}

{counter && <p>I am happy to be learning Astro!</p>}
